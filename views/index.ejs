<!DOCTYPE html>
<html ng-app="app">

<head>
    <base href="/">
    <title>NG Node Auth Demo</title>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="icon" href="#">
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" ng-controller="ApplicationController as vm">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
                <a class="navbar-brand" ui-sref="Home">NG Node Auth</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li ui-sref-active="active"><a ui-sref="Home">Home</a></li>
                    <li ui-sref-active="active" ng-if="!vm.isAuthenticated"><a ui-sref="Login">Login</a></li>
                    <li ui-sref-active="active" ng-if="!vm.isAuthenticated"><a ui-sref="Register">Register</a></li>
                    <li ui-sref-active="active" ng-if="vm.isAuthenticated"><a href>{{vm.user.username}}</a></li>
                    <li ui-sref-active="active" ng-if="vm.isAuthenticated"><a href ng-click="vm.logout()">Logout</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">
        <ui-view></ui-view>
    </div>

    <!--/* Third Party Modules */-->
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="lib/angular/angular.min.js"></script>
    <script src="lib/angular-ui-router/release/angular-ui-router.min.js"></script>

    <!--/* Application Modules */-->
    <script src="js/models/login.user.js"></script>
    <script src="js/models/register.user.js"></script>
    <script src="js/models/user.js"></script>

    <script src="js/services/account.service.js"></script>
    <script src="js/services/test.service.js"></script>

    <script src="js/views/account/login.controller.js"></script>
    <script src="js/views/account/register.controller.js"></script>
    <script src="js/views/account/account.config.js"></script>
    <script src="js/views/account/account.js"></script>

    <script src="js/views/home/home.controller.js"></script>
    <script src="js/views/home/home.config.js"></script>
    <script src="js/views/home/home.js"></script>

    <script src="js/views/views.js"></script>

    <script src="js/app.controller.js"></script>
    <script src="js/app.config.js"></script>
    <script src="js/app.js"></script>
</body>

</html>